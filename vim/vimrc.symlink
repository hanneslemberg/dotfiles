set nocompatible
set background=dark " assume a dark background

let mapleader=","

" plugins
execute pathogen#infect()
filetype plugin indent on

syntax on 
set number
set smartindent
set autoindent
set expandtab
set tabstop=4
set shiftwidth=4
set nowrap
set noswapfile
" search
set hlsearch 
set incsearch
set smartcase
set autoread
set expandtab
set ts=4


" typescript
au BufRead,BufNewFile *.ts set filetype=javascript
